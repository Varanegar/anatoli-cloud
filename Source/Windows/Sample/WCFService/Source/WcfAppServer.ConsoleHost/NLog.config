<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<target name="console" xsi:type="Console" layout="${date:format=dd-MM-yyyy HH\:mm\:ss} | ${level:uppercase=true} | ${message}" />
		<target name="colouredConsole" xsi:type="ColoredConsole" layout="${message}" />
		<target name="file" xsi:type="File" fileName="${basedir}/log.txt" layout="${date:format=dd-MM-yyyy HH\:mm\:ss} | ${level:uppercase=true} | ${message}" />
		<target name="eventLog" xsi:type="EventLog" source="VN WCF App Server" layout="${message}" />
		<!--target xsi:type="EventLog" name="eventLog" source="NLog Demo" layout="${message}${newline}Call site: ${callsite:className=true:methodName=true}${newline}Logger: ${logger}">-->
	
	</targets>

	<rules>
		<logger name="*" minlevel="Trace" writeTo="colouredConsole" />
		<logger name="*" minlevel="Info" writeTo="eventLog" />
	</rules>
</nlog>