
@{
    ViewBag.Title = "";
    Layout = null;
}

<div class="container product-rule-edit-page k-rtl">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-2"><h4>نام:</h4></div>
                <div class="col-md-9">
                    <input type="text" name="ruleName" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"><h4>نوع محصول:</h4></div>
                <div class="col-md-9">
                    <input id="productType" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"><h4>شیوه سفارش:</h4></div>
                <div class="col-md-9">
                    <input id="reOrderCalcType" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"><h4>از تاریخ:</h4></div>
                <div class="col-md-9">
                    <input type="text" name="fromDate" class="form-control fromDate" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"><h4>تا تاریخ:</h4></div>
                <div class="col-md-9">
                    <input type="text" name="toDate" class="form-control toDate" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"><h4>نوع درخواست بازنگری محصول:</h4></div>
                <div class="col-md-9">
                    <input id="stockProductRequestRuleType" class="form-control" style="width:100%" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"><h4>نوع قانون:</h4></div>
                <div class="col-md-9">
                    <input id="stockProductRequestRuleCalcType" class="form-control" style="width:100%" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"><h4>تعداد محصول:</h4></div>
                <div class="col-md-9">
                    <input type="number" id="Quantity" class="form-control" style="width:100%" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        ko.applyBindings(new productRequestRuleEditManagerViewModel(), $(".product-rule-edit-page")[0]);

        $(".fromDate, .toDate").persianDatepicker();
    });
</script>