<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/kendo")
    <link href="~/Content/persianDatepicker-default.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top header-menu">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("محصولات", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="exit-menu-item" data-bind="visible: shouldShowLogout"><a href="#" class="glyphicon glyphicon-log-out"> خروج </a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - محصولات</p>
        </footer>
    </div>

    <div class="login-form k-rtl hide">
        <div class="row">
            <div class="col-md-12">
                <input class="form-control" type="text" data-bind="value: loginEmail" placeholder="نام کاربری یا ایمیل" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input class="form-control" type="password" data-bind="value: loginPassword" placeholder="رمزعبور" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-primary btn-lg btn-login">
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> ورود
                </button>
            </div>
        </div>
        <div class="row"><span class="text-danger" data-bind="text: result" /></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/kendo")
    <script src="~/Scripts/persianDatepicker.min.js"></script>

    @Scripts.Render("~/bundles/app")

    <script>
        $(function () {
            ko.applyBindings(headerMenu, $(".header-menu")[0]);

            ko.applyBindings(accountManagerApp, $(".login-form")[0]);

            $(document).on("click", ".glyphicon-log-out", function () {
                accountManagerApp.logout();
            });

            headerMenu.refreshHeaderMenu();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
