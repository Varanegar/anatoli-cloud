@{
    ViewBag.Title = "سوابق درخواست ها";
}

<div class="container store-request-history-page">
    <h1>@ViewBag.Title</h1>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div class="stores">
                    <select class="form-control" data-bind="options: stores,
                       optionsText: 'stockName',
                       value: chosenStore,
                       optionsCaption: 'انتخاب نمایید...'"></select>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12 k-rtl">
            <div class="history-grid"></div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/x-kendo-template" id="template">
        <div>
            <div class="request-details-grid"></div>
        </div>
    </script>

    <script>
        $(function () {
            ko.applyBindings(new ProductHistoryManagerViewModel(), $('.store-request-history-page')[0]);
        });
    </script>
}