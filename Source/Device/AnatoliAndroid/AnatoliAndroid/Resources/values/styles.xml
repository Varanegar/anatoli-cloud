<resources>
  <style name="AnatoliTheme" parent="AnatoliTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="AnatoliTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/blue2</item>
    <item name="colorPrimaryDark">@color/blue1</item>
    <item name="colorAccent">#FF4081</item>
  </style>
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splashscreen</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="AnatoliPage">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/textgray</item>
    <item name="android:typeface">monospace</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">1dp</item>
  </style>
  <style name="AnatoliDialog">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/textgray</item>
    <item name="android:typeface">monospace</item>
    <item name="android:padding">20dp</item>
  </style>
  <style name="AnatoliButton" parent="android:Widget.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:typeface">monospace</item>
    <item name="android:padding">5dp</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:minWidth">50dp</item>
  </style>
  <style name="AnatoliButton.Green">
    <item name="android:background">@drawable/greenbutton</item>
  </style>
  <style name="AnatoliButton.Blue">
    <item name="android:background">@drawable/bluebutton</item>
  </style>
  <style name="AnatoliButton.Red">
    <item name="android:background">@drawable/orangebutton</item>
  </style>
  <style name="AnatoliTextField">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/textgray</item>
    <item name="android:padding">9dp</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:layout_margin">2dp</item>
    <item name="android:gravity">right</item>
    <item name="android:textSize">15dp</item>
    <item name="android:textCursorDrawable">@null</item>
  </style>



  <!-- List -->

  <style name="ListBackContent">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">@dimen/height_list</item>
    <item name="android:background">@color/background_list_front</item>
    <item name="android:paddingLeft">@dimen/padding_default</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="ListFrontContent">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">@dimen/height_list</item>
    <item name="android:background">@color/background_list_front</item>
  </style>



  <!-- Settings -->

  <style name="SettingTitle">
    <item name="android:textColor">@color/text_title</item>
    <item name="android:textSize">@dimen/font_size_title</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="SettingContent">
    <item name="android:paddingBottom">@dimen/padding_default</item>
    <item name="android:layout_marginLeft">@dimen/margin_setting</item>
  </style>

  <style name="SettingText">
    <item name="android:textColor">@color/text_description</item>
    <item name="android:textSize">@dimen/font_size_description</item>
    <item name="android:layout_marginRight">@dimen/margin_default</item>
  </style>

  <style name="Line">
    <item name="android:background">@color/line</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">@dimen/line_default</item>
  </style>

  <style name="New">
    <item name="android:textColor">@color/text_new_tag</item>
    <item name="android:textSize">@dimen/font_size_new_tag</item>
    
    <item name="android:background">@drawable/background_new_tag</item>
    <item name="android:padding">@dimen/padding_new_tag</item>
  </style>

</resources>